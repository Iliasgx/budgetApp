<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/slider_Checked"/>
            <corners android:topRightRadius="@dimen/sliderRadius" android:bottomRightRadius="@dimen/sliderRadius"/>
            <stroke android:color="@color/slider_Corners" android:width="2dp"/>
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/slider_Unchecked"/>
            <corners android:topRightRadius="@dimen/sliderRadius" android:bottomRightRadius="@dimen/sliderRadius"/>
            <stroke android:color="@color/slider_Corners" android:width="2dp"/>
        </shape>
    </item>
</selector>