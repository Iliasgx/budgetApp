<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/list_ShoppingListItems_Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_weight=".8"
        android:maxLines="1"
        android:text="@string/defaultText"/>

    <EditText
        android:id="@+id/list_ShoppingListItems_Number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/_button_corners"
        android:layout_weight="1.3"
        android:layout_marginHorizontal="5dp"
        android:text="@string/defaultNumber"
        android:textSize="15sp"
        android:hint="@null"
        android:inputType="number"
        android:importantForAutofill="no"
        android:imeOptions="actionDone"/>

    <TextView
        android:id="@+id/list_ShoppingListItems_Amount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end|center_vertical"
        android:layout_weight="1.4"
        android:text="@string/defaultNumber"
        android:textSize="15sp"
        android:layout_marginEnd="8dp"/>
</LinearLayout>