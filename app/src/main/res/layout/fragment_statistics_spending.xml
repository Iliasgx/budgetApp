<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/statistics_Card_Expenses"
        style="@style/CardView_First">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/statistics_Card_Expenses_Title"
                android:text="@string/statistics_cardTitle_SpendingExpenses"
                style="@style/Text_Title"/>

            <TextView
                android:id="@+id/statistics_Card_Expenses_Subtitle"
                android:text="@string/statistics_cardSubtitle_SpendingExpenses"
                style="@style/Text_Subtitle"/>

            <include layout="@layout/custom_divider"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/statistics_Card_Expenses_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/statistics_Card_Categories"
        style="@style/CardView_Default">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/statistics_Card_Categories_Title"
                android:text="@string/statistics_cardTitle_SpendingCategories"
                style="@style/Text_Title"/>

            <TextView
                android:id="@+id/statistics_Card_Categories_Subtitle"
                android:text="@string/statistics_cardSubtitle_SpendingCategories"
                style="@style/Text_Subtitle"/>

            <include layout="@layout/custom_divider"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/statistics_Card_Categories_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>