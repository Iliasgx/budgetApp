<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">

    <TextView
        android:id="@+id/data_Card_GoalSelect_Title"
        android:layout_height="wrap_content"
        android:text="@string/data_Goal_Select_Title"
        android:layout_marginVertical="10dp"
        android:gravity="center_horizontal"
        android:layout_weight="0"
        style="@style/Text_Title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="@string/data_Goal_Name" />

    <EditText
        android:id="@+id/data_Card_GoalSelect_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/data_Goal_Select_HintName"
        android:backgroundTint="@color/colorAccent"
        android:inputType="textNoSuggestions"
        android:autofillHints="@string/data_Goal_Name"/>

    <Button
        android:id="@+id/data_Card_GoalSelect_Create"
        android:text="@string/data_Goal_Select_Create"
        android:layout_marginTop="5dp"
        style="@style/Button_Add"/>

    <TextView
        android:id="@+id/data_Card_GoalSelect_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="@string/data_Goal_Select_Header"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/data_Card_GoalSelect_GridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="40dp"
        android:paddingEnd="0dp"
        app:rowCount="8"
        app:columnCount="2">

        <ImageView
            android:id="@+id/data_Card_GoalSelect_Img1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/goal_item1"
            android:contentDescription="@string/data_Goal_Select_Item1"
            android:background="@drawable/round_image"
            android:backgroundTint="@color/goal_item1"
            android:tag="1"/>

        <ImageView
            android:id="@+id/data_Card_GoalSelect_Img2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/goal_item2"
            android:contentDescription="@string/data_Goal_Select_Item2"
            android:background="@drawable/round_image"
            android:backgroundTint="@color/goal_item2"
            android:tag="2"/>

        <TextView
            android:id="@+id/data_Card_GoalSelect_Item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="@string/data_Goal_Select_Item1" />

        <TextView
            android:id="@+id/data_Card_GoalSelect_Item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="@string/data_Goal_Select_Item2" />

        <ImageView
            android:id="@+id/data_Card_GoalSelect_Img3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/goal_item3"
            android:contentDescription="@string/data_Goal_Select_Item3"
            android:background="@drawable/round_image"
            android:backgroundTint="@color/goal_item3"
            android:tag="3"/>

        <ImageView
            android:id="@+id/data_Card_GoalSelect_Img4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/goal_item4"
            android:contentDescription="@string/data_Goal_Select_Item4"
            android:background="@drawable/round_image"
            android:backgroundTint="@color/goal_item4"
            android:tag="4"/>

        <TextView
            android:id="@+id/data_Card_GoalSelect_Item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="@string/data_Goal_Select_Item3" />

        <TextView
            android:id="@+id/data_Card_GoalSelect_Item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="@string/data_Goal_Select_Item4" />

        <ImageView
            android:id="@+id/data_Card_GoalSelect_Img5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/goal_item5"
            android:contentDescription="@string/data_Goal_Select_Item5"
            android:background="@drawable/round_image"
            android:backgroundTint="@color/goal_item5"
            android:tag="5"/>

        <ImageView
            android:id="@+id/data_Card_GoalSelect_Img6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/goal_item6"
            android:contentDescription="@string/data_Goal_Select_Item6"
            android:background="@drawable/round_image"
            android:backgroundTint="@color/goal_item6"
            android:tag="6"/>

        <TextView
            android:id="@+id/data_Card_GoalSelect_Item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="@string/data_Goal_Select_Item5" />

        <TextView
            android:id="@+id/data_Card_GoalSelect_Item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:text="@string/data_Goal_Select_Item6" />

        <ImageView
            android:id="@+id/data_Card_GoalSelect_Img7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/goal_item7"
            android:contentDescription="@string/data_Goal_Select_Item7"
            android:background="@drawable/round_image"
            android:backgroundTint="@color/goal_item7"
            android:tag="7"/>

        <ImageView
            android:id="@+id/data_Card_GoalSelect_Img8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_gravity="center_horizontal"
            android:padding="10dp"
            app:srcCompat="@drawable/goal_item8"
            android:contentDescription="@string/data_Goal_Select_Item8"
            android:background="@drawable/round_image"
            android:backgroundTint="@color/goal_item8"
