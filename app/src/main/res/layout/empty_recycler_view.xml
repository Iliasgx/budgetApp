<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/emptyDefaultRecyclerView_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="50dp"
    android:paddingVertical="20dp"
    android:background="@color/emptyRecyclerView_defaultBackgroundColor"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emptyDefaultRecyclerView_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/emptyDefaultRecyclerView_icon"
            android:layout_width="@dimen/emptyRecyclerView_defaultImageSize"
            android:layout_height="@dimen/emptyRecyclerView_defaultImageSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/empty_list"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/emptyDefaultRecyclerView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emptyDefaultRecyclerView_icon"
            android:layout_marginTop="10dp"
            android:text="@string/emptyRecyclerView_defaultTitle"
            android:textSize="@dimen/emptyRecyclerView_defaultTitleTextSize"
            android:textColor="@color/emptyRecyclerView_defaultTitleTextColor"
            android:textAllCaps="false"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/emptyDefaultRecyclerView_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emptyDefaultRecyclerView_title"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="@string/emptyRecyclerView_defaultDescription"
            android:textSize="@dimen/emptyRecyclerView_defaultDescriptionTextSize"
            android:textColor="@color/emptyRecyclerView_defaultDescriptionTextColor"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>