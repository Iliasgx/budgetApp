<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_Amount_Card"
    style="@style/CardView_Default">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dialog_Amount_Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_Amount_DefValue"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/dialog_Amount_Backspace"
            android:layout_marginEnd="10dp"/>

        <ImageButton
            android:id="@+id/dialog_Amount_Backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backspace_accent"
            android:contentDescription="@null"
            android:layout_alignParentEnd="true"
            android:tag="16"/>

        <include layout="@layout/custom_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/dialog_Amount_Value"/>

        <RelativeLayout
            android:id="@+id/dialog_Amount_GridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/dialog_Amount_Value"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/dialog_Amount_One"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="1"
                android:tag="1"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Two"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="2"
                android:tag="2"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_toEndOf="@id/dialog_Amount_One"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Three"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="3"
                android:tag="3"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_toEndOf="@id/dialog_Amount_Two"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Divide"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="รท"
                android:tag="15"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_toEndOf="@id/dialog_Amount_Three"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Four"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="4"
                android:tag="4"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_One"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Five"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="5"
                android:tag="5"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Two"
                android:layout_toEndOf="@id/dialog_Amount_Four"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Six"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="6"
                android:tag="6"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Three"
                android:layout_toEndOf="@id/dialog_Amount_Five"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Multiply"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="ร"
                android:tag="14"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Divide"
                android:layout_toEndOf="@id/dialog_Amount_Six"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Seven"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="7"
                android:tag="7"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Four"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Eight"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="8"
                android:tag="8"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Five"
                android:layout_toEndOf="@id/dialog_Amount_Seven"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Nine"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="9"
                android:tag="9"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Six"
                android:layout_toEndOf="@id/dialog_Amount_Eight"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Subtract"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="-"
                android:tag="13"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Multiply"
                android:layout_toEndOf="@id/dialog_Amount_Nine"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Dot"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="."
                android:tag="10"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Seven"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Zero"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="0"
                android:tag="0"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Eight"
                android:layout_toEndOf="@id/dialog_Amount_Dot"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Equals"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="="
                android:tag="11"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Nine"
                android:layout_toEndOf="@id/dialog_Amount_Zero"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/dialog_Amount_Add"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cardBackgroundColor"
                android:text="+"
                android:tag="12"
                android:textSize="24sp"
                tools:ignore="HardcodedText"
                android:layout_below="@id/dialog_Amount_Subtract"
                android:layout_toEndOf="@id/dialog_Amount_Equals"
                android:layout_margin="5dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/dialog_Amount_Ok"
            style="@style/Text_Button_More"
            android:layout_width="wrap_content"
            android:text="@android:string/ok"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/dialog_Amount_GridLayout"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/dialog_Amount_Cancel"
            style="@style/Text_Button_More"
            android:layout_width="wrap_content"
            android:text="@android:string/cancel"
            android:layout_toStartOf="@id/dialog_Amount_Ok"
            android:layout_below="@id/dialog_Amount_GridLayout"
            android:layout_marginEnd="40dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>