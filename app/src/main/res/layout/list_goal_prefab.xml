<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listGoalPrefab_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/listGoalPrefab_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/listGoalPrefab_name"
        app:layout_constraintEnd_toEndOf="@id/listGoalPrefab_name"
        android:padding="10dp"
        app:srcCompat="@drawable/goal_item1"
        android:contentDescription="@string/data_Goal_Select_Item1"
        android:background="@drawable/round_image"
        android:backgroundTint="@color/BB"/>

    <TextView
        android:id="@+id/listGoalPrefab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/listGoalPrefab_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:textAllCaps="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:text="@string/data_Goal_Select_Item1" />
</androidx.constraintlayout.widget.ConstraintLayout>